<% if current_user.favorites.exists?(blog_id: blog.id) %>
  <% favorite = current_user.favorites.find_by(blog_id: blog.id) %>
  <%= link_to blog_favorite_path(blog, favorite), method: :delete, remote: true, class: "favorite-link delete-#{blog.id}" do %>
    <i class="material-icons">star</i>
  <% end %>
<% else %>
  <%= link_to blog_favorites_path(blog), method: :post, remote: true, class: "favorite-link post-#{blog.id}" do %>
    <i class="material-icons">star_border</i>
  <% end %>
<% end %>
<%= blog.favorites.length %>